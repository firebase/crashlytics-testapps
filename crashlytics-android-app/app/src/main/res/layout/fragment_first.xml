<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

  <Button
      android:id="@+id/btn_crashMainThread"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Crash Main Thread"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/textview_first" />

  <Button
      android:id="@+id/btn_crashBackgroundThread"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Crash Background Thread"
      app:layout_constraintBottom_toBottomOf="@id/btn_crashMainThread"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/textview_first" />

  <!--
  <Button
      android:id="@+id/button_first"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/next"
      app:layout_constraintBottom_toBottomOf="@id/btn_crashBackgroundThread"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/textview_first" />
      -->

  <TextView
      android:id="@+id/textview_first"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/hello_first_fragment"
      app:layout_constraintBottom_toTopOf="@id/btn_crashMainThread"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>